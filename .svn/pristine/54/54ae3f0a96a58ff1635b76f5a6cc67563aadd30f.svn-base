using iSnack.BLL.Interface;
using iSnack.Service.Interface;
using iSnack.Service.Data;

namespace iSnack.Service
{
    public class HelloWordService : IHelloWordService
    {
        public HelloWordEntity GetHello(HelloWordEntity entity)
        {
            string strResult = BLLFactory.GetBLLByType<IHelloWordBLL>().GetHelloWord(entity.Word);
            return new HelloWordEntity() { Word = strResult };
        }
    }
}
