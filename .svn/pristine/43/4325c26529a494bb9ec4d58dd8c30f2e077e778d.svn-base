using iSnack.Common.Attribute;
using iSnack.BLL.Interface;
using iSnack.BLL.Exception;
using System.Transactions;
using System.Linq;
using System.Data;
using System;

namespace iSnack.BLL
{
    public class HelloWordBLL : BaseBLL, IHelloWordBLL
    {
        [Transaction]
        [Exception(BLLException.B200001)]
        [Log]
        public virtual string GetHelloWord(string strWord)
        {
            return string.Format("Halo {0}", strWord);
        }
    }
}
